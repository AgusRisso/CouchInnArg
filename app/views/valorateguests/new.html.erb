
<%= form_for @valorar do |f| %>
	
<%= render 'shared/error_messages', object: f.object %>

<div class="form-group">
	<%= f.label :Calificacion, class: 'control-label' %>
	
	<%= f.select(:calificacion, [1,2,3,4,5], {}, { :class => 'my_style_class' }) %>
</div>

<div class="form-group">

	<%= f.label :comentario, class: 'control-label' %>

	<%= f.text_field :comentario, placeholder: 'Deje su opinion aqui', :required => true,  class: 'form-control' %>

</div>

	<%= f.submit 'Valorar', class: 'btn btn-primary' %>

	
<% end %>
