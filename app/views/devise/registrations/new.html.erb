<div id=Sign_up>
<h1 style="color: blue">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :nombre %><br />
        <%= f.text_field :name, autofocus: true, placeholder: 'ej:pablo' %></div>


  <div><%= f.label :apellido %><br />
        <%= f.text_field :apellido, autofocus: true,placeholder: 'ej: torres' %></div>
  

 
  <div><%= f.label :edad %><br />
        <%= f.number_field :edad, autofocus: true, min: 18, title:'debe ser mayor de edad' %></div>
  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'ej: gonzalo@gmail.com' %>
  </div>

  <div class="field">
    <%= f.label :contraseÃ±a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_contraseÃ±a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div><%= f.label :telefono %><br />
  <%= f.number_field :telefono, autofocus: true,placeholder: '221876432' %></div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

