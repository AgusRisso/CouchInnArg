<%= form_for @lodgings do |f| %>
	
	 <%= render 'shared/error_messages', object: f.object %>
	<div class="form-group">	
		<%= f.label :titulo,  class: 'control-label' %>
		<%= f.text_field :titulo, placeholder: 'Ingrese el titulo', class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :descripcion, class: 'control-label' %>
		<%= f.text_field :descripcion, placeholder: 'ej: caracteristica o atributo', class: 'form-control' %>
		<%= f.label :detalle, class: 'control-label' %>
		<%= f.text_field :detalle, placeholder: 'ej: cantidad habitaciones, servicios,etc', class: 'form-control' %>
		<%= f.label :zona, class: 'control-label' %>
		<%= f.text_field :zona, placeholder: 'Ingrese la zona', class: 'form-control' %>
		<%= f.label :cantidad_de_huespedes, class: 'control-label' %>
		<%= f.text_field :cantidaddehuespedes, placeholder: 'ej: 5', class: 'form-control' %>
		<%= f.label :url, class: 'control-label' %>
		<%= f.text_field :url, :pattern => 'http.+', placeholder: 'ej: copie el url de la imagen aqui',  class: 'form-control' %>


		<div class="row">
			<div class="col-md-4">
				<%= f.label :lodgingtype_id, 'Tipo de Hospedaje' %>
  				<%= collection_select(:lodging, :lodgingtype_id, Lodgingtype.where(:enable=> true), :id, :tipo, {}, { class: 'form-control'}) %>
  			</div>
  		</div>	

	</div>

	<%= f.submit 'Crear', class: 'btn btn-primary btn-lg' %>

<% end %>


