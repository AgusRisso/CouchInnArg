<%= form_for @lodging do |f| %>

<%= render 'shared/error_messages', object: f.object %>
		 
	<%= f.label :titulo,  class: 'control-label' %>
	<%= f.text_field :titulo, placeholder: 'Ingrese el título', class: 'form-control' %>

	<%= f.label :descripcion, class: 'control-label' %>
	<%= f.text_field :descripcion, placeholder: 'ej: característica o atributo', class: 'form-control' %>
	
	<%= f.label :detalle, class: 'control-label' %>
	<%= f.text_field :detalle, placeholder: 'ej: cantidad habitaciones, servicios,etc', class: 'form-control' %>
	
	<%= f.label :zona, class: 'control-label' %>
	<%= f.text_field :zona, placeholder: 'Ingrese la zona', class: 'form-control' %>
	
	<%= f.label :url, class: 'control-label' %>
	<%= f.text_field :url, :pattern => 'http.+', placeholder: 'ej: copie el url de la imagen aquí', class: 'form-control' %>
	
	<%= f.label :urldos, class: 'control-label' %>
	<%= f.text_field :urldos, placeholder: 'ej: copie el url de la imagen aquí',:pattern=>'http.+',  class: 'form-control' %>

	<%= f.label :urltres, class: 'control-label' %>
	<%= f.text_field :urltres, placeholder: 'ej: copie el url de la imagen aquí',:pattern=>'http.+',  class: 'form-control' %>

	<%= f.label :urlcuatro, class: 'control-label' %>
	<%= f.text_field :urlcuatro, placeholder: 'ej: copie el url de la imagen aquí',:pattern=>'http.+',  class: 'form-control' %>

	<div class="row">
		<div class="col-md-4">
				<%= f.label :lodgingtype_id, 'Tipo de Hospedaje' %>
  				<%= collection_select(:lodging, :lodgingtype_id, Lodgingtype.where(:enable=> true), :id, :tipo, {}, { class: 'form-control'}) %>
  		</div>
  	</div>	


	<%= f.submit 'Guardar', class: 'btn btn-primary btn-lg' %>
	
<% end %>